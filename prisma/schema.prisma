generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id                Int      @id @default(autoincrement())
  name              String
  description       String
  photoUrl          String?
  goalRep           Int
  tags              String[]
  discordWebhookUrl String?
  discordInviteUrl  String?
  likeCount         Int      @default(0)
  badges            String[] @default([])

  owner        Participant   @relation("GroupOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId      Int
  participants Participant[] @relation("GroupParticipants")
  records      Record[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Participant {
  id       Int    @id @default(autoincrement())
  nickname String
  password String

  group       Group    @relation("GroupParticipants", fields: [groupId], references: [id], onDelete: Cascade)
  groupId     Int
  ownedGroups Group[]  @relation("GroupOwner")
  records     Record[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([groupId, nickname], name: "unique_nickname_per_group")
}

model Record {
  id           String       @id @default(uuid())
  exerciseType ExerciseType
  description  String
  time         Int
  distance     Float
  photos       String[]     @default([])

  group    Group       @relation(fields: [groupId], references: [id], onDelete: Cascade)
  groupId  Int
  author   Participant @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ExerciseType {
  run
  bike
  swim
}
